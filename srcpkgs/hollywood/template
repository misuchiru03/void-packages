do_install() {
	vmkdir usr/lib/hollywood
	vmkdir usr/lib/wallstreet
	vmkdir usr/share/hollywood
	vmkdir usr/share/wallstreet
	vcopy "lib/hollywood/*" usr/lib/hollywood
	vcopy "lib/wallstreet/*" usr/lib/wallstreet
	vman share/man/man1/hollywood.1
	vman share/man/man1/wallstreet.1
	vcopy "share/hollywood/*" usr/share/hollywood
	vcopy "share/wallstreet/*" usr/share/wallstreet
	vbin bin/hollywood
	vbin bin/wallstreet
}
