do_install() {
	vmkdir usr/share/examples/i3blocks/battery-plus/
	vcopy i3blocks.conf usr/share/examples/i3blocks/battery-plus/

	vmkdir /usr/libexec/i3blocks
	vinstall battery-plus 655 usr/libexec/i3blocks
}
