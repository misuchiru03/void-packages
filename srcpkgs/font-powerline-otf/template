# Template file for 'font-powerline-otf'
pkgname=font-powerline-otf
version=2.8.1
revision=1
archs=noarch
wrksrc="powerline-${version}"
depends="font-util"
short_desc="Fonts from a statusline plugin for vim"
maintainer="Alex Childs <misuchiru03+void@gmail.com>"
license="MIT"
homepage="https://powerline.readthedocs.io"
distfiles="https://github.com/powerline/powerline/archive/${version}.tar.gz"
checksum=a4f36ad9d88a6c90b82427d574c8b5518b3c8b11b6eaf38acf2336064c63565d

do_install() {
	install -Dm644 font/10-powerline-symbols.conf -t ${DESTDIR}/usr/share/fontconfig/
	install -Dm644 font/PowerlineSymbols.otf -t ${DESTDIR}/usr/share/fonts/OTF/

	vlicense LICENSE
}
